<Window x:Class="System_decyzyjny.WyswietlTabeleDanych"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_decyzyjny"
        mc:Ignorable="d"
        
        Title="Wyswietl Tabele Danych" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" x:Name="tabela" AutoGenerateColumns="True"/>
        <Button x:Name="nextPrzycisk" Grid.Column="1" Grid.Row="0" Click="next_click" Content="Next" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="100"/>
        <Button Grid.Column="1" Grid.Row="1" Click="save_click" Content="Save" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>

</Window>
